<svg width="600" height="180" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="600" height="180">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>
                .main {
                    display: flex;
                    align-items: center;
                }

                .container {
                    border-radius: 10px;
                    padding: 15px 20px;
                    background-color: #{{ background_color }};
                    border: 1px solid #{{ border_color }};
                    width: 100%;
                    height: 100%;
                    box-sizing: border-box;
                }

                .art {
                    width: 30%;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                .cover {
                    width: 120px;
                    height: 120px;
                    border-radius: 10px;
                }

                .content {
                    width: 70%;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    padding-left: 20px;
                }

                .song {
                    font-size: 28px;
                    font-weight: bold;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    background: linear-gradient(
                        125deg,
                        rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
                        rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
                    );
                    background-size: 200% 100%;
                    -webkit-text-fill-color: transparent;
                    -webkit-background-clip: text;
                    animation: gradient 15s ease infinite;
                }

                .artist {
                    font-size: 20px;
                    color: #aaa;
                    margin-top: 6px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    background: linear-gradient(
                        -125deg,
                        rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
                        rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
                    );
                    background-size: 200% 100%;
                    -webkit-text-fill-color: transparent;
                    -webkit-background-clip: text;
                    animation: gradient 12s ease infinite;
                }

                #bars {
                    margin-top: 10px;
                }

                .bar {
                    width: 3px;
                    height: 15px;
                    background: linear-gradient(
                        90deg,
                        rgb({{ barPalette[0][0] }}, {{ barPalette[0][1] }}, {{ barPalette[0][2] }}),
                        rgb({{ barPalette[1][0] }}, {{ barPalette[1][1] }}, {{ barPalette[1][2] }}),
                        rgb({{ barPalette[2][0] }}, {{ barPalette[2][1] }}, {{ barPalette[2][2] }}),
                        rgb({{ barPalette[3][0] }}, {{ barPalette[3][1] }}, {{ barPalette[3][2] }})
                    );
                    background-size: 200% 100%;
                    background-position: 0% 50%;
                    animation: gradient 15s ease infinite, pulse 0ms -800ms ease-in infinite alternate;
                }

                @keyframes gradient {
                    0% {
                        background-position: 0% 50%;
                    }
                    50% {
                        background-position: 100% 50%;
                    }
                    100% {
                        background-position: 0% 50%;
                    }
                }

                @keyframes pulse {
                    0% {
                        height: 4px;
                        opacity: 0.3;
                    }
                    100% {
                        height: 15px;
                        opacity: 1;
                    }
                }

                a {
                    text-decoration: none;
                }

                div {
                    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
                }

                {{barCSS|safe}}
            </style>

            <div class="main">
                <a class="art" href="{}" target="_blank">
                    <img src="data:image/png;base64, {{ image }}" class="cover" />
                </a>
                <div class="content">
                    <a href="{{ songURI }}" target="_blank">
                        <div class="song">{{ songName }}</div>
                    </a>
                    <a href="{{ artistURI }}" target="_blank">
                        <div class="artist">{{ artistName }}</div>
                    </a>
                    <div id="bars">{{ contentBar|safe }}</div>
                </div>
            </div>
        </div>
    </foreignObject>
</svg>